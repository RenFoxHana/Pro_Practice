<Window x:Class="Pro_Practice.WorkWithInvoice.WorkDocumentType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pro_Practice.WorkWithInvoice"
        mc:Ignorable="d"
        Title="WorkDocumentType" Height="250" Width="800">
    <Grid>
        <TextBox x:Name="TextBoxNameDocumentType" Width="400" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,61,50,0" FontSize="30"/>
        <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Наименование:" VerticalAlignment="Top" FontSize="30" Margin="53,61,0,0"/>
        <Button Content="СОХРАНИТЬ" x:Name="SaveButton" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Click="ButtonSave_Click" Style="{StaticResource ButtonWorkMenu}" Margin="0,0,400,30"/>
        <Button Content="ОТМЕНИТЬ" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Click="ButtonCancel_Click" Style="{StaticResource ButtonWorkMenu}" Margin="400,0,0,30"/>
    </Grid>
</Window>
