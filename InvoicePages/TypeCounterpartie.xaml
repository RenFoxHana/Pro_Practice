<Page x:Class="Pro_Practice.InvoicePages.TypeCounterpartie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pro_Practice.InvoicePages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1920"
      Title="TypeCounterpartie">

    <Grid Background="White">
        <ListView x:Name="ListViewTypeCounterpartie" Margin="30,60,38,30" FontSize="20" ItemsSource="{Binding ListTypeCounterpartie}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Название" 
                                    DisplayMemberBinding="{Binding NameType}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
