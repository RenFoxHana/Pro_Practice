<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="ButtonTopMenu">
        <Setter Property="Button.FontSize" Value="18"/>
        <Setter Property="Button.HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Border.BorderThickness" Value="0"/>
        <Setter Property="Button.Background" Value="Transparent" />
        <Setter Property="Button.Margin" Value="5,20,0,0" />
        <Setter Property="Button.BorderBrush" Value="Transparent" />
    </Style>

    <Style x:Key="ButtonWorkMenu">
        <Setter Property="Button.FontSize" Value="20"/>
        <Setter Property="Button.Width" Value="200" />
        <Setter Property="Button.Height" Value="40" />
        <Setter Property="Button.VerticalAlignment" Value="Top" />
        <Setter Property="Button.HorizontalAlignment" Value="Left"/>
        <Setter Property="Button.Background" Value="#FBE8D5" />
    </Style>

    <Style x:Key="ButtonMainMenu">
        <Setter Property="Button.FontSize" Value="32"/>
        <Setter Property="Button.Width" Value="450" />
        <Setter Property="Button.Padding" Value="5" />
        <Setter Property="Button.Background" Value="#FFE6B67B" />
    </Style>
    
</ResourceDictionary>